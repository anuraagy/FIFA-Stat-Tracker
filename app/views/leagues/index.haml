.container
  .row
    .column.column-25
      %h1 Leagues
    .column.column-25.column-offset-50
      = text_field_tag :search, "", :placeholder => "Seach games", :id => "search"
  .table
    %table#table
      %thead
        %tr
          %th Name
          %th{:title => "Win percentage"} # of Members
          %th Commissioner
          %th{:title => "Wins"} Sport
          %th{:title => "Losses"} Join
      %tbody
        - @leagues.each do |league|
          %tr
            %td
              = league.display_name
            %td
              = league.players.count
            %td
              = league.commissioner ? league.commissioner.name : "N/A"
            %td
              = league.sport
            %td
              = current_user.leagues.include?(league) ? (link_to "Go", league_path(league.name)) : (link_to "Join", join_league_path(league.name))

